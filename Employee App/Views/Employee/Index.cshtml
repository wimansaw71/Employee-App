                <td>employee.lastname</td>
                <td>employee.joineddate</td>
                <td>employee.email</td>
                <td>employee.address</td>
                <td>employee.phonenumber</td>
                <td>
                    <a class='btn btn-primary btn-sm' href='/Employee/Edit?employeeid=employee.employeeid'>Edit</a>
                    <a class='btn btn-primary btn-sm' href='/Employee/Delete?employeeid=employee.employeeid'>Delete</a>
                </td>
